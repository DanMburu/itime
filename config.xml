<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.itime" 
	   versionCode= "1"
       version = "1.0.0">
		
    <name>iTime</name>

    <description>
	Buy and Sell Airtime, a good way to make some extra cash.
    </description>

    <author href="http://kendevs.com" email="dmgitau@gmail.com">
        Daniel Mburu
    </author>
    
   <access origin="*" />
   <allow-intent href="*" />
   <allow-navigation href="*" />
	
	
	<feature name="http://api.phonegap.com/1.0/network"/>
	
	<feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
   </feature>
   <preference name="phonegap-version" value="3.7.0" /> 
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <icon src="icon.png" />
    <icon src="themes/images/icon-36.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="themes/images/icon-48.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="themes/images/icon-72.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="themes/images/icon-96.png"  gap:platform="android"    gap:density="xhdpi" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<gap:plugin name="org.apache.cordova.inappbrowser" />

</widget>
